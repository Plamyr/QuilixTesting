@model List<CompanyViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<table class="table">
    <tr>
        <th>
            Идентификатор
        </th>
        <th>
            Наименование организации
        </th>
        <th>
            Организационно-правовая форма
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationalForm)
                <a href="/Home/DeleteCompany/@item.Id">Удалить</a> || <a href="/Home/UpdateCompany/@item.Id">Изменить</a>
            </td>
        </tr>
    }

</table>

<a asp-controller="Home" asp-action="AddCompany">Добавить</a>
